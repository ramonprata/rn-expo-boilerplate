{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@src": ["./src"],
      "@assets": ["./assets"],
      "@shared": ["./src/shared/index.ts"],
      "@shared/hooks": ["./src/shared/hooks/index.ts"],
      "@shared/components": ["./src/shared/components/index.ts"],
      "@shared/theme": ["./src/shared/theme/index.ts"],
      "@shared/types": ["./src/shared/types/index.ts"],
      "@shared/utils": ["./src/shared/utils/index.ts"],
      "@features": ["./src/features/index.ts"],
      "@features/*": ["./src/features/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
